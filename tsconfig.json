{
  "ts-node": {
    "files": true
  },
  "files": [
    "src/index.ts",
    "src/types/index.d.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "typeRoots": ["./src/types"]
  },
  "include": ["/.setup", "/src/**/*", "/test/*"],
  "exclude": ["/src/views/**/*"]
}
