{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "#routes/*": ["routes/*"]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
